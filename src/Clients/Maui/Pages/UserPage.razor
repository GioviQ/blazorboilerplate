@inherits UserBasePage
@page "/user/edit/{id}"
@page "/user/add"
@attribute [AuthorizeForFeature(UserFeatures.UserManager)]

<MudContainer MaxWidth="MaxWidth.False">
    @if (found)
    {
        if (model == null)
        {
            <LoadingBackground />
        }
        else
        {
            <UserViewModelPanel Model="@model" BackLink="/users" />            
        }
    }
    else
    {
        <PageNotFound />
    }
</MudContainer>
